<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="{{ asset('style/stylesheet.css') }}" rel="stylesheet">
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('main') }}">Sortir.com</a>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('main') }}">Accueil</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_login') }}">Se Connecter</a>
                        </li>

                        <li class="class nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Liste des sorties</a>
                        </li>

                        {% if is_granted('ROLE_USER') %}

                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('insert')  }}">Créer une sortie</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('detail') }} ">Mon Profil</a>
                            </li>


                            <li class="class nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('app_logout') }}">Se déconnecter</a>
                            </li>
                        {% else %}
                            <li class="class nav-item">

                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_ADMIN') %}
                            {# TODO : modifier en options users pour l'administrateur #}
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('app_register') }}">Enregistrer un User</a>
                            </li>

                        {% endif %}


                    </ul>
                <form>
                {% if app.user %}
                    <div class="mb-3">
                        Bienvenue {{ app.user.username }}
                    </div>
                {% endif %}
                </form>
                </div>
            </div>
        </nav>


    </header>
    <main>
        {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="text-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
        {% endfor %}

        {% block body %}
        {% endblock %}
    </main>

    </body>
</html>
